= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :full_name
    = f.text_field :full_name
  .field
    = f.label :photo
    = f.file_field :photo
  .actions
    = f.submit 'Save'
